<Window x:Class="ClipboardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardApp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:imaging="clr-namespace:System.Windows.Media.Imaging;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="Enhanced Clipboard" Height="400" Width="400"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="White"
        Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with title -->
        <TextBlock Grid.Row="0" Text="Better Clipboard V 1.0.0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
        <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,0" Height="1" Background="Black"/>
        
        <!-- Clipboard list -->
        <ListView Grid.Row="1" x:Name="ClipboardListView" ItemsSource="{Binding History}" SelectionMode="Extended" PreviewKeyDown="ClipboardListView_PreviewKeyDown">
            <ListView.Resources>
                <DataTemplate DataType="{x:Type sys:String}">
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" MaxWidth="380" Margin="5"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type imaging:BitmapImage}">
                    <Image Source="{Binding}" Stretch="Uniform" Width="100" Height="100" Margin="5"/>
                </DataTemplate>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>